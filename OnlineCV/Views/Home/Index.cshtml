            }

        /* Keyframe animations for modals */
        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        @@keyframes slideIn {
            from {
                transform: translateY(-50px);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        @@media (min-width: 768px) {
            .project-card {
                flex-basis: calc(50% - 1.5rem);
            }
        }
    </style>
