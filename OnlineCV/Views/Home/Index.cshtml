                font-weight: 700;
                color: var(--c-text-white);
                margin: 0 0 0.5rem;
            }

            .header h3 {
                font-size: 1.25rem;
                font-weight: 500;
                color: var(--c-secondary);
                margin: 0 0 1.5rem;
            }

            .header hr {
                width: 80px;
                height: 4px;
                margin: 0 auto 2rem;
                background: linear-gradient(to right, var(--c-secondary), var(--c-accent));
                border: none;
                border-radius: 2px;
            }

        .contact-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 1rem;
            align-items: center;
        }

            .contact-grid i {
                margin-right: 0.75rem;
                color: var(--c-secondary);
            }

            .contact-grid a, .contact-grid p {
