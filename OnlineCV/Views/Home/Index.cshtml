    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // --- Modal & Form Logic ---
            const contactModal = document.getElementById('contactModal');
            const messageBox = document.getElementById('messageBox');
            const messageText = document.getElementById('messageText');
            const contactForm = document.getElementById('contact-form');

            // Expose modal functions globally for your inline 'onclick' attributes
            window.openContactModal = () => contactModal.style.display = 'flex';
            window.closeContactModal = () => contactModal.style.display = 'none';
            window.showMessageBox = (message) => {
                messageText.innerText = message;
                messageBox.style.display = 'flex';
            };
            window.closeMessageBox = () => messageBox.style.display = 'none';

            // Close modals when clicking outside of them
            window.addEventListener('click', e => {
                if (e.target === contactModal) window.closeContactModal();
                if (e.target === messageBox) window.closeMessageBox();
            });

            // --- Scroll Animation Logic ---
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const animation = entry.target.getAttribute('data-anim');
                        const delay = entry.target.getAttribute('data-delay');
                        if (delay) entry.target.style.animationDelay = `${delay}ms`;
                        entry.target.style.visibility = 'visible';
                        entry.target.classList.add('animate__animated', animation);
                        observer.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.1 });

            document.querySelectorAll('.scroll-anim').forEach(el => observer.observe(el));

            emailjs.init({
                publicKey: 'YOUR_EMAILJS_PUBLIC_KEY' // Your EmailJS Public Key
            });

            contactForm.addEventListener('submit', e => {
                e.preventDefault();
                                //Email ServiceID,              TemplateID
                emailjs.sendForm('YOUR_EMAILJS_SERVICE_ID', 'YOUR_EMAILJS_TEMPLATE_ID', contactForm)
                    .then(() => {
                        window.showMessageBox('✅ Message sent successfully!');
                        window.closeContactModal();
                        contactForm.reset();
                    })
                    .catch(err => {
                        console.error('EmailJS Error:', err);
                        window.showMessageBox('❌ Failed to send message. Please try again later.');
                    });
            });
        });
