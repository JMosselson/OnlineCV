                color: var(--c-secondary);
            }

        /* --- Sections --- */
        .section {
            margin-bottom: 3rem;
        }

        .section-title {
            font-size: 1.875rem;
            font-weight: 700;
            color: var(--c-text-white);
            position: relative;
            padding-bottom: 0.75rem;
            margin-bottom: 1.5rem;
        }

            .section-title::after {
                content: '';
                position: absolute;
                left: 0;
                bottom: 0;
                width: 50px;
                height: 4px;
                background-color: var(--c-accent);
                border-radius: 2px;
            }

            .section-title i {
                margin-right: 1rem;
                color: var(--c-secondary);
            }

        /* --- Specific Section Styles --- */
        .experience-item, .education-item {
            margin-bottom: 1rem;
        }

        .item-title {
            font-size: 1.125rem;
            font-weight: 600;
            color: var(--c-text-white);
        }

        .item-subtitle {
            color: var(--c-text-medium);
            margin-bottom: 0.25rem;
        }

        .skills-list {
            list-style: none;
            padding: 0;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 0.75rem 1.5rem;
        }

            .skills-list li {
                position: relative;
                padding-left: 1.5rem;
            }

                .skills-list li::before {
                    content: '\f00c';
                    font-family: 'Font Awesome 6 Free';
                    font-weight: 900;
                    position: absolute;
                    left: 0;
                    color: var(--c-secondary);
                }

        /* --- Projects --- */
        .project-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        .project-card {
