            transition: color 0.3s ease;
        }

            a:hover {
                color: var(--c-accent);
            }

        .container {
            max-width: 900px;
            width: 100%;
            background-color: var(--c-dark-card);
            border-radius: 16px;
            padding: 2.5rem;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
